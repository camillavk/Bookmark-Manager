<header>
	<div id="logo">
		<a href="/">Bookmarks</a>
	</div>
	<a href="/links/new" class='button'>Add link</a>
	<div id="user-links">
		<% if current_user %>
			<span id="welcome-message">
				Welcome, <%= current_user.email %>
			</span>

			<form id="sign-up" method="post" action="/sessions">
				<input type="hidden" name="_method" value="delete">
				<input type="submit" value="Sign out" class='button'>
			</form>

		<% else %>
		<a href='/sessions/new' id='sign-in' class='button'>Sign in!</a>
		<a href='/users/new' id='sign-up' class='button'>Sign up!</a>

		<% end %>

	</div>
</header>